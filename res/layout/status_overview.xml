<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/status_overview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="Overview"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/status_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/status_overview"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF" />

            <TextView
                android:id="@+id/status_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/status_name"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF" />

            <LinearLayout
                android:id="@+id/status_amount_remaining_123"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/status_description"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Amount Remaining     Rs"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/status_amount_remaining"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/status_amount_collected_123"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/status_amount_remaining_123"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Amount Collected     Rs"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/status_amount_collected"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/status_max_limit_123"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/status_amount_collected_123"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Max Limit Per Person     Rs"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/status_max_limit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/status_your_contri_123"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/status_max_limit_123"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Your Contribution     Rs"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/status_your_contri"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>